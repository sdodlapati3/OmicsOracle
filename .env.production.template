# OmicsOracle Production Environment Configuration Template
# Generated on: $(date)
#
# SECURITY WARNING: This file contains sensitive information.
# - Copy to .env.production and fill in actual values
# - Store in a secure location
# - Never commit to version control
# - Restrict file permissions: chmod 600 .env.production
# - Use strong, unique passwords for all services

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Main application ports
MAIN_PORT=8001
LEGACY_PORT=8000

# Application URLs (update with your domain)
BASE_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Settings (REQUIRED - Generate secure keys)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_CHARS_LONG
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session Security
SESSION_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
SECURE_COOKIES=true
SECURE_SSL_REDIRECT=true

# CORS Settings
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=omics_oracle_prod
POSTGRES_USER=omics_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
DATABASE_URL=postgresql://omics_user:CHANGE_THIS_TO_A_SECURE_PASSWORD@postgres:5432/omics_oracle_prod

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_A_SECURE_REDIS_PASSWORD
REDIS_DB=0
REDIS_URL=redis://:CHANGE_THIS_TO_A_SECURE_REDIS_PASSWORD@redis:6379/0

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ENTRIES=10000

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# OpenAI API (REQUIRED for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.1

# NCBI API (REQUIRED for publication search)
NCBI_API_KEY=your_ncbi_api_key_here
NCBI_EMAIL=your_email@your-domain.com
NCBI_TOOL=OmicsOracle

# PubMed Settings
PUBMED_RETMAX=20
PUBMED_TIMEOUT=30

# =============================================================================
# MONITORING AND PERFORMANCE
# =============================================================================

# Performance Monitoring
ENABLE_PROFILING=false
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check Settings
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Request Timeout
REQUEST_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=5

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================

# Active profiles for production
COMPOSE_PROFILES=production,legacy

# Service Configuration
COMPOSE_PROJECT_NAME=omics_oracle_production

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_LEGACY_INTERFACE=true
ENABLE_API_DOCS=false  # Disable in production for security
ENABLE_DEBUG_TOOLBAR=false
ENABLE_REAL_TIME_UPDATES=true

# AI Features
ENABLE_AI_ANALYSIS=true
ENABLE_AUTO_EXTRACTION=true
ENABLE_SMART_SEARCH=true

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/omics_oracle/app.log

# Sentry DSN (optional - for error monitoring)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Worker Configuration
WORKERS=4
MAX_CONCURRENT_JOBS=50
SEARCH_TIMEOUT=60
AGENT_TIMEOUT=120

# Cache Settings
CACHE_TTL=3600
MAX_SEARCH_RESULTS=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_FUTURISTIC_INTERFACE=true
ENABLE_AI_AGENTS=true
ENABLE_WEBSOCKET=true
ENABLE_LEGACY_FALLBACK=true
ENABLE_MONITORING=true
