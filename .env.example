# OmicsOracle Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# 
# SECURITY NOTE: Never commit files with real API keys to version control
# The .env.local file should be gitignored and contain your actual secrets

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Ports
MAIN_PORT=8001
LEGACY_PORT=8000
FRONTEND_PORT=3000
JUPYTER_PORT=8888

# Application URLs
BASE_URL=http://localhost:8001
API_BASE_URL=http://localhost:8001/api
HOST=0.0.0.0

# =============================================================================
# API CONFIGURATIONS
# =============================================================================

# OpenAI Configuration (REQUIRED for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# NCBI Configuration (REQUIRED for biomedical data)
NCBI_EMAIL=your_email@example.com
NCBI_API_KEY=your_ncbi_api_key_here
NCBI_RATE_LIMIT=3

# GEO API Configuration
GEO_BASE_URL=https://www.ncbi.nlm.nih.gov/geo/query/acc.cgi
GEO_API_KEY=your_ncbi_api_key_here
GEO_BATCH_SIZE=10
GEO_REQUEST_DELAY=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development (MongoDB)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=omics_oracle
MONGODB_COLLECTION_PREFIX=omics_
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=password

# Production (PostgreSQL)
DATABASE_SERVICE=postgres
DATABASE_URL=postgresql://omics:your_password@postgres:5432/omics_oracle
POSTGRES_PORT=5432
POSTGRES_DB=omics_oracle
POSTGRES_USER=omics
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600
REDIS_PORT=6379

# Application Cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIRECTORY=./data/cache

# ChromaDB Configuration
CHROMADB_PATH=./data/chromadb

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Flask/FastAPI Security
SECRET_KEY=your_secret_key_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_at_least_64_chars_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session Security (Production)
SESSION_SECRET_KEY=your_session_secret_key
SECURE_COOKIES=false
SECURE_SSL_REDIRECT=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8001
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================

# Docker Settings
COMPOSE_PROFILES=default,dev,frontend
DOCKERFILE=Dockerfile
INTERNAL_PORT=8001

# SSL/HTTPS (Production)
HTTP_PORT=80
HTTPS_PORT=443
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Development Features
FLASK_ENV=development
API_WORKERS=4
API_RELOAD=true

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/omics_oracle.log

# Monitoring (if enabled)
SENTRY_DSN=your_sentry_dsn_here
MONITORING_ENABLED=false
